extends layout
block content
  body
    div.container
      div.header
        h1.heading
          span.tree.glyphicon.glyphicon.glyphicon-tree-deciduous
          span.khan Khan
          span.questions Questions
        p Have an idea for a good question? Share it with others!
        a.button_default_color.list_button(href="#", class="btn btn-default") Answer Questions
        a.list_button.btn.primary.btn-default(href="#") Create Question
      div(id="problem-and-answer" class="framework-perseus" style="width: 797px;")
        div(id="problemarea")
          div(id="workarea")
          div(id="hintsarea")
        div(id="answer_area_wrap")
          div(id="answer_area")
            form(id="answerform")
              div(id="anwsercontent")
                div(id="solutionarea")
        div(style="clear; both;")
        div(id="extras")
          button.list_button.btn.primary.btn-default(href="#", id="score") Check Answer
          span(id="examples-show" style="display: none;") Acceptable Formats
  div.container
    div.footer
      | This site makes us of Khanacademy's MIT Licensed open source.
  != "<script>"
      include ../public/javascripts/khanquestion.js
  != "</script>"
