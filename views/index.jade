extends layout
block content
  body
    div.container
      div.jumbotron
        h1 KhanQuestions
        p Try to answer the question below. Like it? Give it a thumbs up!
        a.pull-left(href="#", class="btn btn-default") Create Question
        div.pull-left.btn-group
          button(type="button", class="btn btn-default") New
          button(type="button", class="btn btn-default") Trending
          button(type="button", class="btn btn-default") Good
        div.pull-left.btn-grp
          button.btn.btn-default(type="button", style="color:red;")
            | 3 
            span.glyphicon.glyphicon-thumbs-down(style="position:relative;top:3px;")
          button.btn.btn-default(type="button", style="color:green;")
            | 41 
            span.glyphicon.glyphicon-thumbs-up
        a.pull-left.btn.btn-info.btn-default(href="#") Next Question

    div(id="problem-and-answer" class="framework-perseus" style="width: 797px;")
      div(id="problemarea")
          div(id="workarea")
          div(id="hintsarea")
      div(id="answer_area_wrap")
          div(id="answer_area")
              form(id="answerform")
                  div(id="anwsercontent")
                      div(id="solutionarea")
      div(style="clear; both;")
    div(id="extras")
      button(id="score")
        Score
      span(id="examples-show" style="display: none;")
        Acceptable Formats

    div(id="perseus-container")
      | This site makes us of Khanacademy's open source under MIT License
    != "<script>"
      include ../public/javascripts/khanquestion.js
    != "</script>"
